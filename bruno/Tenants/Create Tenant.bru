meta {
  name: Create Tenant
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/admin/tenants
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "name": "Acme Corp",
    "slug": "acme"
  }
}

script:post-response {
  if (res.status === 201 && res.body.data && res.body.data.id) {
    bru.setVar("tenantId", res.body.data.id);
  }
}
